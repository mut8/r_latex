journal = {Global Change Biology},
keywords = {10 august 2007,abundance patterns,cetaceans,climatic index,disturbance ecology,fish stocks,oil-spills,received 4 may 2006,regime shifts,revised version received 27,seabirds,september 2006 and accepted},
month = nov,
pages = {071127144738001--???},
title = {{Detecting the impact of oceano-climatic changes on marine ecosystems using a multivariate index: The case of the Bay of Biscay (North Atlantic-European Ocean)}},
