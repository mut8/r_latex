journal = {Agriculture},
keywords = {15 n nmr,analytical pyrolysis,heterocyclic nitrogen,humic substances,mass spectrometry,model structure,soil organic matter,unidentified nitrogen},
number = {1},
pages = {1--15},
publisher = {Springer},
title = {{R E V I E W A RT I C L E The chemistry of soil organic nitrogen : a review}},
url = {http://www.springerlink.com/openurl.asp?genre=article\&id=doi:10.1007/s003740050335},
volume = {26},
