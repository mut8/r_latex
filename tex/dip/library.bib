issn = {00167061},
journal = {Geoderma},
keywords = {humic acid,molecular mixing model,nmr,pyrolysis-gc/ms eurosoils,soil organic matter,spectroscopy},
month = apr,
number = {1-2},
pages = {10--22},
title = {{Analytical pyrolysis and thermally assisted hydrolysis and methylation of EUROSOIL humic acid samples — A key to their source}},
