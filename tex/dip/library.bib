pages = {1562--8},
pmid = {20451473},
title = {{Validation of a novel in vitro assay using ultra performance liquid chromatography-mass spectrometry (UPLC/MS) to detect and quantify hydroxylated metabolites of BDE-99 in rat liver microsomes.}},
